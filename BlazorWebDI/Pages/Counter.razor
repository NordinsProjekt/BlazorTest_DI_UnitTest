@page "/counter"
@inject BlazorWebDI.Interfaces.IDataSource _personData;
<PageTitle>Counter</PageTitle>

<h1>Personlista</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
@foreach (var person in _personData.GetAllPeople())
{
    <p>@person</p>
}

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        _personData.NewPerson("Markus " + currentCount);
    }
}
